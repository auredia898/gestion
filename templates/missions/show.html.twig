{% extends 'base.html.twig' %}

{% block title %}Missions{% endblock %}

{% block body %}
    <h1>Missions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Objective</th>
                <td>{{ mission.objective }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ mission.startDate ? mission.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ mission.endDate ? mission.endDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_missions_index') }}">back to list</a>

    <a href="{{ path('app_missions_edit', {'id': mission.id}) }}">edit</a>

    {{ include('missions/_delete_form.html.twig') }}
{% endblock %}
